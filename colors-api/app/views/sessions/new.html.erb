<h1 class='text-center mt-5' >Log in</h1>



<div class="row">
  <div class="col-md-6 offset-3">

    <% flash.each do |type, msg| %>
      <div class="alert alert-info">
        <%= msg %>
      </div>
    <% end %>


    <%= form_with(url: login_path, scope: :session, local: true, id: "login-form") do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username , class: "form-control" , id: 'session_username'  %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", id: 'session_password' %>

      <%= f.submit "Log in", class: " mt-2 btn btn-primary" %>
    <% end %>
  </div>
</div>

<script>
$(document).ready(function () {
  $("#login-form").on('submit', function (e) {
    var username = $('#session_username').val();
    var password = $('#session_password').val();
    Session.save(username, password);
  });
});
</script>
